# Application Configuration
APP_NAME="Business Management System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG="True"
SECRET_KEY="your-super-secret-key-change-in-production"
API_V1_PREFIX="/api/v1"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4
RELOAD="True"

# Database Configuration
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/bms_db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# MongoDB Configuration (Product Catalog)
MONGODB_URL="mongodb://mongodb:27017"
MONGODB_DATABASE="bms_catalog"

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=10

# JWT Configuration
JWT_SECRET_KEY="your-jwt-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_HASH_ROUNDS=12

# CORS Configuration
CORS_ORIGINS='["http://localhost:3000","http://localhost:3001","http://localhost:5173"]'
CORS_CREDENTIALS="True"
CORS_METHODS='["GET","POST","PUT","PATCH","DELETE","OPTIONS"]'
CORS_HEADERS='["*"]'

# Rate Limiting
RATE_LIMIT_ENABLED="True"
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (SendGrid)
EMAIL_ENABLED="True"
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@yourbusiness.com"
EMAIL_FROM_NAME="Business Management System"

# SMS Configuration (Twilio)
SMS_ENABLED="False"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Payment Gateway - Stripe
STRIPE_ENABLED="True"
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Payment Gateway - Razorpay (India)
RAZORPAY_ENABLED="False"
RAZORPAY_KEY_ID="your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"

# File Storage - AWS S3
USE_S3="False"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET_NAME="your-bucket-name"
AWS_S3_REGION="us-east-1"

# File Storage - Local (Development)
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"
CELERY_TASK_SERIALIZER="json"
CELERY_RESULT_SERIALIZER="json"
CELERY_ACCEPT_CONTENT='["json"]'
CELERY_TIMEZONE="UTC"

# ML/AI Configuration
ML_ENABLED="True"
MLFLOW_TRACKING_URI="http://localhost:5000"
ML_MODEL_REGISTRY="mlflow"
ML_FORECAST_REFRESH_HOURS=24

# Elasticsearch Configuration (Optional)
ELASTICSEARCH_ENABLED="False"
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX_PREFIX="bms"

# Monitoring - Sentry
SENTRY_ENABLED="False"
SENTRY_DSN="your-sentry-dsn"
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE="logs/app.log"

# Frontend URLs
ADMIN_DASHBOARD_URL="http://localhost:3000"
STOREFRONT_URL="http://localhost:3001"

# Testing
TEST_DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/bms_test"

# Feature Flags
FEATURE_ML_FORECASTING="True"
FEATURE_PRODUCT_RECOMMENDATIONS="True"
FEATURE_DYNAMIC_PRICING="False"
FEATURE_CHURN_PREDICTION="False"

# Business Configuration
COMPANY_NAME="Your Company Name"
COMPANY_CURRENCY="USD"
COMPANY_TIMEZONE="UTC"
TAX_RATE=0.18  # 18% (adjust for your region)

# Inventory Configuration
LOW_STOCK_THRESHOLD=10
CRITICAL_STOCK_THRESHOLD=5

# Order Configuration
ORDER_AUTO_CANCEL_HOURS=24
ORDER_CONFIRMATION_REQUIRED="True"

# Session Configuration
SESSION_LIFETIME_HOURS=24
SESSION_CLEANUP_INTERVAL_HOURS=6
